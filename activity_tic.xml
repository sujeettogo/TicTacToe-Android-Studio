<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainTic">

    <android.support.constraint.Guideline
    android:id="@+id/g1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.32"
    />
    <android.support.constraint.Guideline
        android:id="@+id/g2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        />
    <android.support.constraint.Guideline
        android:id="@+id/g3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"
        />
    <android.support.constraint.Guideline
        android:id="@+id/g4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        />
    <android.support.constraint.Guideline
        android:id="@+id/g5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />
    <android.support.constraint.Guideline
        android:id="@+id/g6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"
        />
    <android.support.constraint.Guideline
        android:id="@+id/g7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46"
        />
    <android.support.constraint.Guideline
        android:id="@+id/g8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />
    <View
        android:id="@+id/l1"
        android:layout_width="5dp"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/g1"

        />
    <View
        android:id="@+id/l2"
        android:layout_width="5dp"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/g2"
        />
    <View
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/g6"
        />
    <View
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/g7"
        />
    <View
    android:id="@+id/l5"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    app:layout_constraintBottom_toTopOf="@+id/g5"
    />
    <View
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"

        />
    <TextView
        android:id="@+id/tu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/g5"
        app:layout_constraintLeft_toRightOf="@+id/g1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        />
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:rowCount="3"
        android:columnCount="3"
        >



    </GridLayout>

    <TextView
        android:id="@+id/chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="X"
        app:layout_constraintLeft_toRightOf="@+id/g1"
        app:layout_constraintTop_toBottomOf="@+id/tu"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/g5"
        />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player2"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/g2"
        app:layout_constraintTop_toBottomOf="@+id/g5" />

    <TextView
        android:id="@+id/xscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginRight="50dp"
        android:textSize="30dp"
        app:layout_constraintRight_toLeftOf="@+id/g1"
        app:layout_constraintTop_toBottomOf="@+id/g8" />

    <TextView
        android:id="@+id/oscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/g8"
        app:layout_constraintLeft_toRightOf="@+id/g2"
        android:layout_marginLeft="30dp"
        />

    <!--<fragment-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!---->
</android.support.constraint.ConstraintLayout>